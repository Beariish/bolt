import print from core
import get_union_size, get_union_entry from meta

fn prettyprint_union(union: Type) {
    let const entries = get_union_size(union)

    let result: string
    for i in entries {
        let const entry = get_union_entry(union, i)
        result += to_string(entry)
        if i < entries - 1 {
            result += " | "
        }
    }

    print(result)
}

prettyprint_union(type(string?))